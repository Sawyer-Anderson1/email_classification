<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="MailApp">
  <!-- These are the metadata that describe the addin -->
  <Id>8ceb1e66-df4c-49ed-9ee3-d81f8ee9aea2</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Sawyer Anderson</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Spam Classifier Reporter and Filterer"/>
  <Description DefaultValue="An add-in that utilizes an ML model trained on spam and ham email data, to filter and report spam. Will keep and organize the spam, providing links and information from the add-in's pane."/>
  
  <!-- Urls for the app: pngs for add-in logo/branding and the html local host -->
  <IconUrl DefaultValue="https://localhost:3000/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://localhost:3000/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://localhost:3000/support.html"/>
  
  <!-- Specifies additional domains outside the hosting one (SupportUrl) which would open
   in the add-in's task pane instead of being opened outside Outlook -->
  <AppDomains>
    <AppDomain>https://www.contoso.com</AppDomain>
  </AppDomains>

  <!-- Defines which Office application the add-in app will run in (Outlook here) -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <!-- Defines the default url for the UI/the html file for the add-in -->
  <!-- Is now outdated, so it is ignored if a VersionOverrides element is add that has the default url as well -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://localhost:3000/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- Permissions obviously -->
  <Permissions>ReadWriteItem</Permissions>

  <!-- Rule defines the context which the add-in is available to the user 
  apparently it should be a child of ExtensionPoint in VersionOverrides
  RuleCollection is a logical grouping of rules defined by its mode,
  but in this case there is only one rule so its not really doing anything -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <!-- Contains information not supported in the base manifest -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <!-- The overrides above Requirements set
    The requirments set simply ensures the correct API methods are included -->
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <!-- Host from before is overrided as well -->
    <Hosts>
      <Host xsi:type="MailHost">
        <!-- Specifies the settings and user experience for use on a PC or laptop
        there is also the MobileFormFactor -->
        <DesktopFormFactor>
          <!-- Specifies the html file that contains or loads all the JavaScript
           functions used by the function command buttons (the ExecuteFunction)-->
          <FunctionFile resid="Commands.Url"/>

          <!-- Defines where the addin commands appear in the Office (Outlook) UI
          Child elements: OfficeTab (on the ribbon tab), CustomTab (a traditional tab),
          and OfficeMenu (dropdown menu from right clicking)-->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <!-- Uses OfficeTab -->
            <OfficeTab id="TabDefault">
              <!-- Defines group of UI controls
              Child elements: Label, Tooltip, Icon, Control, 
              OfficeControl (only in powerpoint addins), OverriddenByRibbonApi (not in Outlook addins)-->
              <Group id="msgReadGroup">
                <!-- The label for the group -->
                <Label resid="GroupLabel"/>
                <!-- The control that has the command actions, and can also have its siblings -->
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <!-- A rich tooltip -->
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <!-- Icons -->
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>

                  <!-- The Action element with the url for the taskpane.html and js (the actual addin app) -->
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                
                <!-- Control for the action to execute the from commands.html and js -->
                <Control xsi:type="Button" id="ActionButton">
                  <Label resid="ActionButton.Label"/>
                  <Supertip>
                    <Title resid="ActionButton.Label"/>
                    <Description resid="ActionButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>action</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- Contains resuources defined by id to be used in the VersionOverrides nod 
    Child elements: Images, Urls, ShortStrings, LongStrings -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://localhost:3000/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://localhost:3000/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://localhost:3000/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://localhost:3000/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://localhost:3000/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Email Spam Add-in"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Show Task Pane"/>
        <bt:String id="ActionButton.Label" DefaultValue="Perform an action"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Opens a pane displaying all available properties."/>
        <bt:String id="ActionButton.Tooltip" DefaultValue="Perform an action when clicked."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>